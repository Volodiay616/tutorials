{
    "version": "2.0.0",
    "tasks": [
      // Run Odoo with debuger
      {
        "type": "docker-run",
        "label": "docker-run: odoo",
        "dockerRun": {
          "containerName": "tutorial-14",
          "image": "odoo-x86",
          "volumes": [
            {
              "containerPath": "/home/odoo/odoo",
              "localPath": "C:/odoo"
            }
          ],
          "ports": [
            {
              "containerPort": 8069,
              "hostPort": 8069
            },{
              "containerPort": 5678,
              "hostPort": 5678
            },
          ],
          "customOptions": "--link postgres-13:db"
        },
        "python": {
          "args": [
            "--config=/home/odoo/odoo/14.0/conf/odoo-docker-bootcamp.conf",
            "--database=14_tutorial_1",
            "--update=estate"
          ],
          "file": "home/odoo/odoo/14.0/odoo/odoo-bin"
        },
      },
      // Run Odoo with tests enabled. Stop when tests are finished
      {
        "type": "docker-run",
        "label": "docker-run: tower tests",
        "dockerRun": {
          "containerName": "tutorial-14",
          "image": "odoo-x86",
          "volumes": [
            {
              "containerPath": "/home/odoo/odoo",
              "localPath": "C:/odoo"
            }
          ],
          "ports": [
            {
              "containerPort": 8069,
              "hostPort": 8069
            },{
              "containerPort": 5678,
              "hostPort": 5678
            },
          ],
          "customOptions": "--link postgres-13:db"
        },
        "python": {
          "args": [
            "--config=/home/odoo/odoo/14.0/conf/odoo-docker-bootcamp.conf",
            "--database=14_tutorial_test",
            "--init=estate",
            "--test-enable",
            "--stop-after-init",
          ],
          "file": "/home/odoo/odoo/14.0/odoo/odoo-bin"
        },
      },
      // This image will be built for tasks
      {
        "label": "docker-build",
        "type": "docker-build",
        "dockerBuild": {
          "context": "${workspaceFolder}",
          "dockerfile": "${workspaceFolder}/Dockerfile",
          "tag": "odoo-debug:14.0-tower"
        }
      }
    ]
  }