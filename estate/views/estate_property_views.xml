<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="estate_property_view_tree" model="ir.ui.view">
        <field name="name">estate.property.tree</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <tree string="Estate">
                <field name="name" string="Title"/>
                <field name="postcode" string="Postcode"/>
                <field name="bedrooms" string="Bedrooms"/>
                <field name="living_area" string="Living Area (sqm)"/>
                <field name="expected_price" string="Expected Price"/>
                <field name="selling_price" string="Selling Price"/>
                <field name="date_availability" string="Available From"/>
                <field name="property_type_id" string="Property Type"/>
                <field name="tag_ids" string="Tags" widget="many2many_tags"/>
            </tree>
        </field>
    </record>

    <record id="view_estate_property_filter" model="ir.ui.view">
        <field name="name">estate_property_filter</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <search string="Estate search">
                <field name="name" string="Title"/>
                <field name="postcode" string="Postcode"/>
                <field name="bedrooms" string="Bedrooms"/>
                <field name="living_area" string="Living Area (sqm)"/>
                <field name="expected_price" string="Expected Price"/>
                <field name="facades" string="Facades"/>
                <filter name="filter_availability" string="Availabile" domain="['|', ('state', '=', 'new'), ('state', '=', 'offer recieved')]"/>
                <filter name="groupby_postcode" string="Postcode" context="{'group_by': 'postcode'}"/>
                <filter name="property_type_id" string="Property Type"/>
            </search>
        </field>
    </record>

    <record id="estate_property_view_form" model="ir.ui.view">
        <field name="name">estate.property.form</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <form string="Estate">
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name"/>
                        </h1>
                        <h2>
                            <field name="tag_ids" widget="many2many_tags"/>
                        </h2>
                    </div>
                    <group name="estate_property_header">
                        <group name="estate_details">
                            <field name="property_type_id" string="Property Type"/>                           
                            <field name="postcode" string="Postcode"/>
                            <field name="date_availability" string="Available From"/>                
                        </group>
                        <group name="estate_prices_details">                            
                            <field name="expected_price" string="Expected Price"/>
                            <field name="best_price" string="Best Offer"/>
                            <field name="selling_price" string="Selling Price"/> 
                        </group>
                        <notebook>
                            <page string="Description">
                                <group>
                                    <field name="description" string="Description"/>
                                    <field name="bedrooms" string="Bedrooms"/>
                                    <field name="living_area" string="Living Area (sqm)"/>
                                    <field name="facades" string="Facades"/>
                                    <field name="garage" string="Garage"/>
                                    <field name="garden" string="Garden"/>
                                    <field name="garden_area" string="Garden Area (sqm)"/>
                                    <field name="garden_orientation" string="Garden Orientation"/>
                                    <field name="total_area" string="Total Area (sqm)"/>
                                </group>
                            </page>
                            <page name="offers" string="Offers">
                                <form>
                                    <tree>                            
                                        <field name="offer_ids"/>
                                    </tree>
                                </form>                                            
                            </page>
                            <page string="Other info">
                                <group>
                                    <field name="partner_id"/>
                                    <field name="salesperson_id"/>
                                </group>
                            </page>
                        </notebook>              
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>